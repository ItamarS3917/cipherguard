{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CipherGuard",
  "version": "2.0.0",
  "identifier": "com.cipherguard.vault",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "plugins": {},
  "app": {
    "windows": [
      {
        "title": "CipherGuard Local Vault",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 600,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
